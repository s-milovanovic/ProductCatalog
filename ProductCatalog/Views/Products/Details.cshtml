@model ProductCatalog.Models.Product

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    @if (!string.IsNullOrWhiteSpace(Model.Description))
    {
        <li><strong>Description:</strong> @Model.Description</li>
    }
    <li><strong>Category:</strong> @Model.Category.Name</li>
    <li><strong>Manufacturer:</strong> @Model.Manufacturer.Name</li>
    <li><strong>Supplier:</strong> @Model.Supplier.Name</li>
    <li><strong>Price:</strong> @Model.Price<span> RSD</span></li>
</ul>
